{
  "project_name": "kubeopt",
  "project_description": "KubeOpt AI \u2013 AI-Driven Kubernetes Resource & Cost Optimizer",
  "stack": {
    "language": "python",
    "language_version": "3.11+",
    "framework": "flask",
    "database": "postgresql",
    "orm": null
  },
  "paths": {
    "source": ".",
    "backend": null,
    "venv": "venv",
    "env_file": ".env",
    "tests": "tests"
  },
  "startup": {
    "port": 5000,
    "health_endpoint": "/api/v1/health",
    "start_command": "python run.py",
    "pre_checks": [
      "venv_active",
      "db_connected"
    ]
  },
  "git": {
    "protected_branches": [
      "main",
      "master"
    ],
    "branch_prefixes": [
      "feat/",
      "fix/",
      "chore/",
      "docs/",
      "refactor/"
    ],
    "require_merge_confirmation": true
  },
  "testing": {
    "framework": "pytest",
    "unit_command": "pytest tests/unit/ -v",
    "e2e_command": "pytest e2e/ -v",
    "coverage_threshold": 80
  },
  "blocked_actions": [
    "commit_to_protected_branch",
    "push_to_protected_branch_without_confirmation",
    "delete_backup_branches"
  ],
  "e2e": {
    "enabled": false,
    "base_url": "http://localhost:5000",
    "browser": "chromium"
  },
  "context_tracking": {
    "enabled": true,
    "budget": 200000,
    "warning_threshold": 0.7,
    "critical_threshold": 0.9,
    "show_in_status": true,
    "auto_reset_session": true,
    "auto_save_handoff": true
  },
  "output": {
    "compact_mode": false,
    "max_lines": 50,
    "max_files_shown": 20,
    "truncate_long_values": true
  },
  "delegation": {
    "enabled": true,
    "auto_delegate": true,
    "parallel_limit": 3,
    "summary_max_words": 500,
    "context_threshold": 0.5,
    "rules": [
      {
        "name": "exploration",
        "task_patterns": [
          "explore.*",
          "investigate.*",
          "find.*",
          "discover.*",
          "search.*",
          "analyze.*codebase",
          "understand.*"
        ],
        "subagent_type": "explore",
        "priority": 10,
        "enabled": true,
        "constraints": [
          "Read-only operations",
          "Focus on file structure and patterns"
        ]
      },
      {
        "name": "testing",
        "task_patterns": [
          "test.*",
          "write.*test.*",
          "unit test.*",
          "e2e.*",
          "integration test.*",
          "add.*test.*"
        ],
        "subagent_type": "test",
        "priority": 8,
        "enabled": true,
        "constraints": [
          "Use project test framework",
          "Include edge cases",
          "Mock external services"
        ]
      },
      {
        "name": "documentation",
        "task_patterns": [
          "document.*",
          "doc.*",
          "readme.*",
          "comment.*",
          "write.*doc.*",
          "update.*doc.*"
        ],
        "subagent_type": "document",
        "priority": 6,
        "enabled": true,
        "constraints": [
          "Follow project doc conventions",
          "Be concise",
          "Include examples"
        ]
      },
      {
        "name": "review",
        "task_patterns": [
          "review.*",
          "audit.*",
          "check.*",
          "validate.*",
          "security.*",
          "performance.*"
        ],
        "subagent_type": "review",
        "priority": 7,
        "enabled": true,
        "constraints": [
          "Focus on critical issues",
          "Provide actionable feedback"
        ]
      }
    ],
    "default_constraints": [
      "Keep summaries concise to preserve main agent context",
      "Report file paths as absolute paths",
      "Include specific line numbers when relevant"
    ]
  },
  "orchestration": {
    "enabled": true,
    "max_delegations_per_feature": 5,
    "max_delegations_per_session": 20,
    "delegation_cooldown_seconds": 60,
    "max_parallel_delegations": 3,
    "context_threshold": 0.5,
    "min_subtasks_for_delegation": 1,
    "auto_delegate": false,
    "require_user_confirmation": true,
    "priority_threshold": 5
  },
  "discoveries": {
    "enabled": true
  },
  "documentation": {
    "enabled": true
  }
}