# KubeOpt AI Environment Configuration
# Copy this file to .env and update values for your environment
# cp .env.example .env

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Database connection (PostgreSQL)
DATABASE_URL=postgresql://kubeopt:your-password@localhost:5432/kubeopt

# Anthropic API key for Claude AI
# Get your key at: https://console.anthropic.com/
LLM_API_KEY=sk-ant-your-api-key-here

# Prometheus server URL
PROMETHEUS_BASE_URL=http://localhost:9090

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-change-in-production

# JWT secret key for authentication (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# =============================================================================
# OPTIONAL SETTINGS (defaults shown)
# =============================================================================

# Flask environment: development, production, testing
FLASK_ENV=development

# Logging
LOG_LEVEL=INFO
# LOG_FORMAT=json  # 'json' or 'text'

# LLM settings
# LLM_MODEL_NAME=claude-sonnet-4-20250514
# LLM_MAX_TOKENS=4096
# LLM_RETRY_ATTEMPTS=3

# Prometheus settings
# PROMETHEUS_TIMEOUT=30

# Metrics collection
# KUBEOPT_DEFAULT_LOOKBACK_DAYS=7

# Authentication
# AUTH_ENABLED=true
# AUTH_PASSWORD_MIN_LENGTH=8
# AUTH_MAX_LOGIN_ATTEMPTS=5
# AUTH_LOCKOUT_DURATION=900  # seconds

# JWT token expiration
# JWT_ACCESS_TOKEN_EXPIRES=900   # 15 minutes
# JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days

# Rate limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_DEFAULT=100/hour
# RATE_LIMIT_STORAGE_URL=memory://
# RATE_LIMIT_BYPASS_KEY=  # Optional key to bypass rate limits

# Audit logging
# AUDIT_LOG_ENABLED=true
# AUDIT_LOG_RETENTION_DAYS=90
